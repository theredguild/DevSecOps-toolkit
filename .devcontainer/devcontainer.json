{
    "name": "OSS Security Tools",
    "dockerComposeFile": "../compose.yml",
    "service": "toolbox",
    "workspaceFolder": "/workspace",
    "shutdownAction": "stopCompose",

    "features": {
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.makefile-tools",
                "ms-azuretools.vscode-docker"
            ]
        }
    },

    "containerEnv": {
        "DOCKER_BUILDKIT": "1",
        "DOCKER_CLI_EXPERIMENTAL": "enabled"
    },

    "remoteUser": "wanderer"
}
